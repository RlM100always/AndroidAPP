<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0BA9ED"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/cd"
        android:layout_height="300dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@mipmap/abc"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:columnCount="3"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="#DFFF00"
                android:onClick="showText"
                android:textColor="@color/black" />
            <Button
                android:onClick="showText"
                android:textColor="@color/black"
                android:backgroundTint="#88DF12"
                android:id="@+id/button2"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:textColor="@color/black"
                android:id="@+id/button3"
                android:backgroundTint="#3C4D24"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:textColor="@color/black"
                android:backgroundTint="#8717F6"
                android:id="@+id/button4"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:backgroundTint="#B03A2E "
                android:textColor="@color/black"
                android:id="@+id/button5"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:textColor="@color/black"
                android:id="@+id/button6"
                android:backgroundTint="#09c9a0"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:textColor="@color/black"
                android:backgroundTint="#be2c6c"
                android:id="@+id/button7"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:id="@+id/button8"
                android:textColor="@color/black"
                android:backgroundTint="#fd1d1d"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:onClick="showText"
                android:id="@+id/button9"
                android:textColor="@color/black"
                android:backgroundTint="#ac23b0"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </GridLayout>
    </LinearLayout>


</LinearLayout>